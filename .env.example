# Database Configuration
DB_USER=EDUX
DB_PASSWORD=edux123
DB_URL=oracle-db:1521/EDUX

# Oracle Database (for docker-compose)
ORACLE_PASSWORD=oracle123
ORACLE_DATABASE=EDUX
APP_USER=EDUX
APP_USER_PASSWORD=edux123

# Node Environment
NODE_ENV=development

# Next.js
NEXT_TELEMETRY_DISABLED=1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-to-random-string

# AI Configuration
# Set your AI provider: 'openai', 'gemini', or 'local' (for development without API)
AI_PROVIDER=local

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration (if using Gemini)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# AI Feature Flags (set to 'true' to enable, 'false' to disable)
AI_RECOMMENDATIONS_ENABLED=true
AI_SEARCH_ENABLED=true
AI_SUMMARY_ENABLED=true
AI_QUIZ_ENABLED=true
AI_CHATBOT_ENABLED=true
AI_ANALYTICS_ENABLED=true

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# Sentry Error Tracking (Optional)
# ===========================================
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_DEBUG=false

# ===========================================
# PostHog Analytics (Optional)
# ===========================================
# Get your key from https://posthog.com
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
POSTHOG_DEBUG=false

# ===========================================
# Socket.io Real-time
# ===========================================
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
SOCKET_PORT=3001
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Meilisearch (Optional)
# ===========================================
# Get your key from https://www.meilisearch.com
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=

# ===========================================
# Redis Cache (Optional)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# PWA / Push Notifications (Optional)
# ===========================================
# Generate VAPID keys: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@edux.com